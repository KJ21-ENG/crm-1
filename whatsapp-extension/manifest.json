{
  "manifest_version": 3,
  "name": "CRM WhatsApp Integration",
  "version": "1.1.0",
  "description": "Local WhatsApp integration for CRM system with logout functionality",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "http://127.0.0.1:3001/*",
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:8000/*", "https://crm.localhost/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CRM WhatsApp"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 